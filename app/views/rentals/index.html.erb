<div class="container my-5">
  <h1> My Dashboard <h1>

  <h2>Bids to Rent my Countries</h2>

  <% if @rentals.present? %>
    <div class="dashboard-bids-grid">
      <% @rentals.each do |rental| %>
        <div class="card-country-rental my-3">
          <%= image_tag "#{rental.country.image_url}", alt: "country" %>
          <div class="p-3 d-flex flex-column justify-content-between">
            <div>
              <h3><%= rental.country.name %></h3>
              <p><strong>Initial Price: </strong>$<%= rental.country.initial_price %></p>
            </div>
            <div>
              <h6>Bids:</h6>
              <p><%= rental.user.first_name %> bid R<%= rental.offer_value %></p>
              <%= link_to "Accept", accept_rental_path(rental.id) %>
              <%= link_to "Decline", decline_rental_path(rental.id) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
   <% else %>
      <p>No one has bid to rent any of your countries.</p>
   <% end %>

   

  <h2>Countries I Have Rented</h2>

  <% if @rented_countries.present? %>
    <ul>
      <% @rented_countries.each do |country| %>
        <li><%= country.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>You haven't rented any countries yet.</p>
  <% end %>
</div>
