<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="me-3 mb-0">Countries for Rent</h1>


    <%= simple_form_for :search, url: root_path, method: :get, html: { class: "items-search"} do |f| %>
      <div class="search-form-control">
        <input class="form-control rounded-pill string required px-3" type="text" placeholder="Search Countries" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>

  <div class="countries-grid mt-3 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  <% @countries.each do |country| %>
    <%= link_to country_path(country), class: "relative block rounded-lg overflow-hidden group" do %>


      <!-- Overlay with Text -->
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(country.photo.key, height: 300, width: 430, crop: :fill, alt: "country") %>)">
        <p><%= country.name %></p>
      </div>
    <% end %>
  <% end %>
</div>
